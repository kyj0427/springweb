
$(function(){

	// 댓글추가 버튼이 눌렸을 때
	$('#replyConfirm').click(function(){
		
		/*var params = {
				bno : $('#bno').val()
				, replyer : $('#replyer').val()
				, reply : $('#reply').val()
		}*/
		
		var params = $('#replyFrm').serialize();
		
		//console.log(params);
	
		$.ajax({
			type : 'post'
			, url : '../replies/new'
			, data : params
			, success : function(result){
					alert('댓글입력성공:'+ result);
			}
			, error : function(err){
					alert('댓글입력실패');
					console.log(err);
			}
		});
	
	});


});